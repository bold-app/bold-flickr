%div
  = bold_pagination_for @albums, remote: true

%div
  - @albums.each do |album|
    .flickr.thumb
      = link_to image_tag(album.primary_photo_extras['url_q'], title: album.title),
              bold_site_flickr_album_path(current_site.id, album.id), remote: true

%div{style: 'clear: left;'}
  = bold_pagination_for @albums, remote: true

